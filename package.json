{
  "name": "@reactory/reactory-core",
  "version": "1.0.0",
  "displayName": "Reactory Core",
  "description": "Reactory Core - shared across all platforms and services. Contains type definitions, constants and shared components for the reactory eco-system.",
  "main": "main.ts",
  "module": "reactory-core",
  "private": true,
  "author": {
    "name": "Werner Weber",
    "email": "werner.weber@reactory.net"
  },
  "licenses": [
    {
      "license": "Apache-2.0"
    }
  ],
  "moduleNameMapper": {
    "^reactory/reactory-core(.*)$": "<rootDir>/src/"
  },
  "scripts": {
    "rollup": "rollup --config rollup.config.js",
    "package": "npm pack --pack-destination $REACTORY_PLUGINS/artifacts",
    "make-install": "npm run rollup | npm run package",
    "deploy::local": "NODE_PATH=./scripts npx babel-node ./scripts/deploy.js --presets @babel/env",
    "test": "mocha",
    "lint": "eslint . --fix"
  },
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/reactory/reactory-core.git"
  },
  "dependencies": {
    "@apollo/client": "3.5.9"
  },
  "peerDependencies": {
    "react": "17.0.2"
  },
  "devDependencies": {
    "@babel/cli": "7.4.4",
    "@babel/core": "7.4.4",
    "@babel/eslint-plugin-development": "1.0.1",
    "@babel/node": "7.4.5",
    "@babel/plugin-proposal-class-properties": "7.16.7",
    "@babel/preset-env": "7.16.11",
    "@babel/preset-react": "7.16.7",
    "@babel/preset-typescript": "7.16.7",
    "@babel/register": "7.17.7",
    "@babel/types": "7.17.0",
    "@emotion/core": "10.3.1",
    "@emotion/styled": "^11.8.1",
    "@mui/icons-material": "5.6.1",
    "@mui/lab": "5.0.0-alpha.77",
    "@mui/material": "5.6.1",
    "@mui/styles": "5.6.1",
    "@mui/types": "7.1.2",
    "@rollup/plugin-babel": "5.3.0",
    "@rollup/plugin-commonjs": "21.0.1",
    "@rollup/plugin-node-resolve": "13.1.3",
    "@rollup/plugin-replace": "3.1.0",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/classnames": "^2.3.1",
    "@types/human-date": "^1.4.2",
    "@types/human-number": "^1.0.0",
    "@types/localforage": "^0.0.34",
    "@types/lodash": "4.14.178",
    "@types/mocha": "9.1.0",
    "@types/mongodb": "^3.3.11",
    "@types/mongoose": "5.11.97",
    "@types/node": "12.20.46",
    "@types/object-mapper": "^6.2.0",
    "@types/passport-http": "^0.3.6",
    "@types/passport-jwt": "3.0.1",
    "@types/react": "17.0.2",
    "@types/sha1": "^1.1.2",
    "@types/shelljs": "^0.8.11",
    "@types/uuid": "^3.4.6",
    "chai": "4.3.6",
    "chart.js": "3.7.0",
    "chartjs-node-canvas": "4.1.6",
    "classnames": "^2.3.1",
    "eslint": "8.9.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-plugin-react": "7.28.0",
    "exceljs": "4.3.0",
    "inversify": "^6.0.1",
    "localforage": "1.10.0",
    "mocha": "9.2.2",
    "moment": "^2.24.0",
    "mongodb": "4.5.0",
    "mongoose": "6.3.0",
    "object-mapper": "6.2.0",
    "react": "17.0.2  ",
    "react-dom": "17.0.2",
    "react-router": "6.3.0",
    "react-router-dom": "6.3.0",
    "rollup-plugin-jsx": "1.0.3",
    "shelljs": "0.8.5",
    "ts-node": "10.7.0",
    "typescript": "4.5.5"
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "docs/*",
      ".git",
      "node_modules/**/node_modules"
    ],
    "delay": "3500",
    "verbose": true
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb/base",
      "plugin:import/errors"
    ],
    "rules": {
      "no-use-before-define": 0,
      "arrow-body-style": 0,
      "dot-notation": 0,
      "no-console": 0,
      "no-underscore-dangle": 0,
      "linebreak-style": 1
    },
    "env": {
      "mocha": true
    }
  }
}
