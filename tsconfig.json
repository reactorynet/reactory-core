{
  "compilerOptions": {
    "module": "ESNext",
    "noImplicitAny": true,
    "removeComments": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "target": "ES2017",
    "baseUrl": "./",
    "typeRoots": [
      "./node_modules/@types",
      "src/types",
      "./node_modules/localforage/typings"
    ],
    "paths": {
      "*": [
        "src/*"
      ],
      "@reactory/reactory-core/*": [
        "src/*"
      ],
      "test/*": [
        "test/*"
      ],
    },
  },
}